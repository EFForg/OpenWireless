#!/usr/bin/env python2.7
import cgi
import json
import subprocess

import auth
import common

nullfile = open("/dev/null","w")
ret = "error-calling-update"

try:
    if subprocess.call(["/usr/bin/sudo", "/lib/update/update.py", "check"], stdout=nullfile) == 0:
      ret = "not-up-to-date"
    else:
      ret = "up-to-date"
except:
    # catch exception and return error message
    pass
finally:
    nullfile.close()

result = {
    "result": {
        "status": ret
    }
}

common.render_success(result)
